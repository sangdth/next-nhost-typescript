{
  "name": "next-nhost-typescript",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "server:prod": "next start",
    "server:dev": "next dev",
    "dev": "concurrently \"nhost dev\" \"yarn server:dev\" \"open http://localhost:3000\"",
    "start": "yarn server:prod",
    "lint": "next lint",
    "new:component": "plop component",
    "test": "jest",
    "test:all": "yarn lint && yarn ts-check && yarn test:ci",
    "test:ci": "yarn test --ci --maxWorkers=50% --silent",
    "test:watch": "yarn test --watch --coverage",
    "ts-check": "node --max_old_space_size=4096 node_modules/.bin/tsc --project tsconfig.json --noEmit",
    "test-then-build": "yarn test:all && yarn build"
  },
